.form-line text.title {
	width: 15% !important;
}

.form-title-line {
	display: flex;
	align-items: center;
	color: #888888;
	border-bottom: 2rpx solid #f5f5f5;
	padding: 16rpx 0 16rpx 1%;
	width: 97%;
}

