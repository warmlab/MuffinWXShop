<view class="swiper-area" wx:if="{{promotions.length > 0}}">
		<swiper circular autoplay interval="6000" duration="500" bindchange="swiperChange" style="height: {{banner_height}}px">
			<block wx:for="{{promotions}}" wx:for-item="promotion" wx:key="id">
				<swiper-item wx:for="{{promotion.products}}" wx:key="product_id" style="height: {{banner_height}}px">
						<image src="{{base_image_url}}/{{item.product.images[0].image.name}}" mode="widthFix" lazy-load="true" class="img" bindload="bannerImageLoad" bindtap="toViewPromotionDetail" data-id="{{promotion.id}}" />
				</swiper-item>
			</block>
		</swiper>
		<view class="banner-dots">
			<block wx:for="{{promotions}}" wx:for-item="promotion" wx:key="id">
				<block wx:for="{{promotion.products}}" wx:key="product_id">
						<view class="banner-dot {{index == swiper_current ? 'active' : ''}}"></view>
				</block>
			</block>
		</view>
		<text class="message">小麦芬团购进行中...</text>
</view>
<view class="empty-view" wx:if="{{show_banner && promotions.length<=0}}">
		<text class="fa fa-star fa-4x gray-color" />
		<text class="text">没有正在进行中的团购</text>
</view>
