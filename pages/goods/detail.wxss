@import "../templates/module.wxss"

.swiper-area swiper {
    height: 750rpx !important;
}

.product-banner {
  width: 100%;
  margin-bottom: -6rpx;
}

.product-info {
  display: flex;
  flex-direction: column;
  margin: 20rpx 8rpx;
}

.product-info .name {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.product-info .banner {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #9b9b9b;
}

.product-info .price {
  display: flex;
  align-items: flex-end;
  font-size: 36rpx;
  color: #481A0E;
  font-weight: bold;
  /*justify-items: right;
    text-align: right;
    width:50%;
    justify-content: right;*/
}

.product-info .price.original {
  color: #9b9b9b;
  text-decoration: line-through;
  font-size: 28rpx;
  margin-left: 8rpx;
  font-weight: normal;
}

.product-info .title {
  text-align: center;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.product-info .title text {
  display: inline-block;
  border: 2rpx solid #d1d1d1;
  width: 100rpx;
  height: 0;
  vertical-align: middle;
  margin: 0 20rpx;
}

.product-info .content {
  text-align: center;
  width: 100%;
  color: #eeeeee;
}

.detail-images {
	margin-top: 40rpx;
	border-top: 1rpx solid #eeeeee;
	margin-bottom: 90rpx;
}

.product-info .spec {
	border: 1rpx solid #eeeeee;
	border-radius: 10rpx;
}

.spec .choice {
	height: 60rpx;
	background-color: #eeeeee;
	justify-content: space-between;
	align-items: center;
}

.spec .choice text {
	margin-right: 10rpx;
}

.spec .spec-value{
	justify-content: space-around;
}

.spec-value view {
	font-size:24rpx;
	margin: 6rpx 0;
}

.spec-value text {
	margin-right:8rpx;
}

.spec .store {
	height:50rpx;
	align-items:center;
	display:flex;
}

.spec .spec-seperator {
	border-top:1rpx solid #eeeeee;
}

.product-info .note {
	margin-top: 10rpx;
	color: #9b9b9b;
	/*border: 1rpx solid #eeeeee;
	box-shadow: 5rpx 5rpx 5rpx 5rpx #eeeeee;
	border-radius: 10rpx;*/
}

.product-info .note text {
	font-size:24rpx;
}

.product-info .note view {
	border-top: 1rpx solid #eeeeee;
}

.tags {
  display: flex;
  flex-direction: row;
}

.tag {
  background: #f4ebe2;
  color: #322418;
  font-size: .8em;
  border-radius: 1.5em;
  margin-right: .5em;
  padding: .4em;
}

.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: 100%;
  height: 90rpx;
  display: flex;
	background: #f4f4f4;
	font-size: 32rpx;
}

.bottom .short {
  height: 100%;
  width: 20%;
  border: 1px solid #f4f4f4;
  display: flex;
  justify-content: center;
  padding-top: 17rpx;
}

.bottom .short .share {
	display: flex;
	height: 100%;
	width: 100%;
	align-items: center;
	justify-content: center;
	font-size: 44rpx;
	color: #e64340;
}

.bottom .short text.cart-count {
	display: flex;
	justify-content: center;
	padding: 3rpx 10rpx;
	align-self: flex-start;
	margin-top: 10rpx;
	margin-left: -20rpx;
	float: right;
	z-index: 10;
	background: #e64340;
	font-size: 18rpx;
	color: #fff;
	border-radius: 50%;
}

.bottom .short .icon {
  height: 56rpx;
  width: 56rpx;
  border:none;
  border-radius: 0;
}

.bottom .long {
	display: flex;
	flex: 1;
	color: #fff;
  justify-content: center;
  padding-top: 20rpx;
}

.bottom .long.cart {
	background-color: #CFA57E;
}

.bottom .long.buy {
	background-color: #481A0E;
}

.attr-pop-box {
  width: 100%;
  height: 100%;
  margin:0;
  position: fixed;
  background: #00000080;
  z-index: 20;
	bottom: 0;
	font-size: 30rpx;
  /* display: none; */
}

.attr-pop-box .attr-pop {
  display:flex;
  flex-direction:column;
	width: 100%;
  height: auto;
  max-height: 780rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  overflow-y: auto;
}

.attr-pop .close {
  width: 97%;
  overflow: hidden;
	text-align: right;
	margin-top: 12rpx;
}

.attr-pop .confirm {
	width: 100%;
	margin-top: 40rpx;
	color: #fff;
	font-size: 30rpx;
	background-color: #481A0E;
	height: 90rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.size-area {
  margin-bottom: 10rpx;
}

.attr-pop .amount-area {
		display: flex;
    flex-direction: row;
		margin: 0 2%;
    height: 20%;
    /*float: right; */
}

.amount-area .label {
	display: flex;
	align-items: center;
	margin-right: 20rpx;
}

.amount-area .btn {
    font-size: 42rpx;
}

.amount-area .button {
  width: 50%;
}
