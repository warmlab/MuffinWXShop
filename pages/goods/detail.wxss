/* pages/shop/product.wxss */
.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 750rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50rpx;
  text-align: center;
  line-height: 36rpx;
  padding: 2rpx 12rpx;
}

.swiper-container swiper swiper-item image {
	width: 100%;
	height: 100%;
}

.swiper-container .dots text {
  display: inline-block;
  font-size: 24rpx;
  color: #fff;
}

.service-policy {
  height: 64rpx;
  background: #f4f4f4;
  padding: 0 30rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}

.service-policy .item {
  background-size: 10rpx;
  padding-left: 15rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
}

.service-policy .item .icon {
  color: #e64340;
  font-size: 16rpx;
  margin-right: 6rpx;
}

.product-banner {
  width: 100%;
  margin-bottom: -6rpx;
}

.product-info {
  display: flex;
  flex-direction: column;
  margin: 20rpx 8rpx;
}

.product-info .name {
  color: #353535;
  font-size: 40rpx;
  line-height: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.product-info .banner {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  line-height: 40rpx;
  height: 40rpx;
  color: #888888;
}

.product-info .price {
  height: 35rpx;
  font-size: 35rpx;
  line-height: 35rpx;
  color: #e64340;
  /*justify-items: right;
    text-align: right;
    width:50%;
    justify-content: right;*/
}

.product-info .title {
  text-align: center;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.product-info .title text {
  display: inline-block;
  border: 2rpx solid #eeeeee;
  width: 100rpx;
  height: 0;
  vertical-align: middle;
  margin: 0 20rpx;
}

.product-info .content {
  text-align: center;
  width: 100%;
  color: #eeeeee;
}

.detail-images {
	margin-top: 40rpx;
	border-top: 1rpx solid #eeeeee;
	margin-bottom: 90rpx;
}

.product-info .spec {
	border: 1rpx solid #eeeeee;
	border-radius: 10rpx;
}

.spec .choice {
	height: 60rpx;
	background-color: #eeeeee;
	justify-content: space-between;
	align-items: center;
}

.spec .choice text {
	margin-right: 10rpx;
}

.spec .spec-value{
	justify-content: space-around;
}

.spec-value view {
	font-size:24rpx;
	margin: 6rpx 0;
}

.spec-value text {
	margin-right:8rpx;
}

.spec .store {
	height:50rpx;
	align-items:center;
	display:flex;
}

.spec .spec-seperator {
	border-top:1rpx solid #eeeeee;
}

.product-info .note {
	margin-top: 10rpx;
	color: #888888;
	/*border: 1rpx solid #eeeeee;
	box-shadow: 5rpx 5rpx 5rpx 5rpx #eeeeee;
	border-radius: 10rpx;*/
}

.product-info .note text {
	font-size:24rpx;
}

.product-info .note view {
	border-top: 1rpx solid #eeeeee;
}

.tags {
  display: flex;
  flex-direction: row;
}

.tag {
  background: #f4ebe2;
  color: #322418;
  font-size: .8em;
  border-radius: 1.5em;
  margin-right: .5em;
  padding: .4em;
}

view.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: 100%;
  height: 90rpx;
  display: flex;
	background: #f4f4f4;
	font-size: 28rpx;
}

.bottom .short {
  height: 100%;
  width: 20%;
  border: 1px solid #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom .short .share {
	display: flex;
	height: 100%;
	width: 100%;
	align-items: center;
	justify-content: center;
	font-size: 44rpx;
	color: #e64340;
}

.bottom .short text.cart-count {
	display: flex;
	justify-content: center;
	padding: 3rpx 10rpx;
	align-self: flex-start;
	margin-top: 10rpx;
	margin-left: -20rpx;
	float: right;
	z-index: 10;
	background: #e64340;
	font-size: 18rpx;
	color: #fff;
	border-radius: 50%;
}

.bottom .short .icon {
  display: block;
  height: 64rpx;
  width: 64rpx;
}

.bottom .long {
	display: flex;
	flex: 1;
  height: 100%;
	color: #fff;
	justify-content: center;
	align-items: center;
}

.bottom .long.cart {
	background-color: #a18d65;
}

.bottom .long.buy {
	background-color: #09bb07;
}

.attr-pop-box {
  width: 100%;
  height: 100%;
  margin:0;
  position: fixed;
  background: #00000080;
  z-index: 20;
	bottom: 0;
	font-size: 30rpx;
  /* display: none; */
}

.attr-pop-box .attr-pop {
  display:flex;
  flex-direction:column;
	width: 100%;
  height: auto;
  max-height: 780rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  overflow-y: auto;
}

.attr-pop .close {
  width: 97%;
  overflow: hidden;
	text-align: right;
	margin-top: 12rpx;
}

.attr-pop .confirm {
	width: 100%;
	margin-top: 40rpx;
	color: #fff;
	font-size: 30rpx;
	background-color: #09bb07;
	height: 90rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.size-area {
  margin-bottom: 10rpx;
}

.attr-pop .amount-area {
		display: flex;
    flex-direction: row;
		margin: 0 2%;
    height: 20%;
    /*float: right; */
}

.amount-area label {
    width: 50%;
    text-align: right;
    font-weight: normal;
}

.amount-area .amount{
    flex: 1;
    height: 100%;
    text-align: center;
    font-weight: bold;
    /*line-height: 68.75rpx;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
    float: left;*/
}

.amount-area .cut{
    width: 70rpx;
    height: 100%;
    text-align: center;
    /*line-height: 48rpx;
    border-right:1px solid #ccc;*/
}

.amount-area .add{
    width: 80rpx;
    height: 100%;
    text-align: center;
    /*line-height: 48rpx;
    border-left:1px solid #ccc;*/
}

.amount-area .btn {
    font-size: 42rpx;
}

.amount-area .button {
  width: 50%;
}
